@using AccurateAppend.Websites.Clients.HtmlHelpers.Styles
@model AccurateAppend.Websites.Clients.Areas.Profile.Card.Models.PaymentDetailsModel

@Html.Layout().Promo("My Profile")

<div class="profile-block">
    <div class="container">
        @Html.Partial("~/Areas/Profile/Shared/_ProfileNavigation.cshtml", "payment-information")
        <div class="tab-content" id="v-pills-tabContent">
            <div class="tab-pane fade active show payment-information" id="v-pills-messages" role="tabpanel" aria-labelledby="v-pills-messages-tab">
                <h2>Payment Information</h2>
                <div id="alert" style="display: none;"></div>
                @using (Html.Forms().BeginForm("Index", "Card", new { area = "Profile", id = "paymentForm" }))
                {
                    @Html.ValidationSummary("", true)
                    @Html.HiddenFor(x => x.UserId)
                    @Html.HiddenFor(x => x.RequestId, new { id = "connectionId" })

                    @Html.Partial("~/Views/Shared/_DisplayPaymentForm.cshtml", Model)

                    using (Html.Forms().BeginInputHolder())
                    {
                        <br />
                        <button class="btn btn-primary" id="submitBtn" onclick="javascript: submitForm(this);" disabled="disabled">Update</button>
                    }
                }
            </div>
        </div>
    </div>
</div>



@section HeadContent
{
    <script src="/Scripts/jquery.signalR-2.4.1.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="/signalr/hubs"></script>
    <script src="~/Areas/Profile/Card/Scripts/index.js"></script>

    <script type="text/javascript">
      initializeCardView("@Url.Action("PrimaryCard", "WalletApi", new {Area = "Profile"})", '@Url.Action("Index", "Card", new {Area = "Profile"})');
    </script>
}