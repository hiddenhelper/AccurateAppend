       href="@Url.Action("Upload", "File", new {Area = "Public", id = this.User.Identity.GetIdentifier()})"
       role="tab"
       aria-controls="v-pills-home"
       aria-selected="true">
        Send File to Support
    </a>
    <a class="nav-link @(Model == "manage-api" ? "active show" : "")"
       href="@Url.Action("Index", "Api", new {area = "Profile"})"
       role="tab"
       aria-controls="v-pills-home"
       aria-selected="true">
