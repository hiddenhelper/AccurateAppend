       href="@Url.Action("Index","Contact",new{area="Profile"})"
       role="tab"
       aria-controls="v-pills-home"
       aria-selected="true">
        Account Information
    </a>
    <a class="nav-link"
       style="display:none;" @*added to maintain the css index*@
       href="#"
       role="tab"
       aria-controls="v-pills-profile"
       aria-selected="false">
        Manage Credits
    </a>
    <a class="nav-link @(Model =="payment-information"?"active show":"")"
       href="@Url.Action("Index","Card",new{area="Profile"})"
       role="tab"
       aria-controls="v-pills-messages"
       aria-selected="false">
        Manage Payment Options
    </a>
    <a class="nav-link @(Model =="change-password"?"active show":"")"
       href="@Url.Action("Index","Password",new{area="Profile"})"
       role="tab"
       aria-controls="v-pills-home"
       aria-selected="true">
        Change Password
    </a>
    <a class="nav-link @(Model =="manage-nations"?"active show":"")"
       href="@Url.Action("Index","Nation",new{area="Profile"})"
       role="tab"
       aria-controls="v-pills-home"
       aria-selected="true">
        Manage Nations
    </a>
